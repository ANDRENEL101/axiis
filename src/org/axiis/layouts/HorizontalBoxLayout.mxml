<?xml version="1.0" encoding="utf-8"?>
<layouts:BaseLayout xmlns:mx="http://www.adobe.com/2006/mxml"
	xmlns:degrafa="http://www.degrafa.com/2007"
	xmlns:layouts="org.axiis.layouts.*"
	xmlns:scale="org.axiis.layouts.scale.*"
	xmlns:core="org.axiis.core.*">
	
		
	<mx:Number id="percentGap">0</mx:Number>
	
	<layouts:referenceRepeater>
		<core:GeometryRepeater id="myLayout" dataProvider="{dataItems}">
			<core:geometry>
				<degrafa:RegularRectangle id="referenceGeometry" x="0" y="0" width="{(width / itemCount) - (width * percentGap/2)}" height="{height}"/>
			</core:geometry>
			<core:modifiers>
				<core:PropertyModifier property="x" modifier="{width/itemCount}" modifierOperator="add"/>
			</core:modifiers>
		</core:GeometryRepeater>
	</layouts:referenceRepeater>
	
</layouts:BaseLayout>
