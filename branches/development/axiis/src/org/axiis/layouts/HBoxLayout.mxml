<?xml version="1.0" encoding="utf-8"?>
<core:BaseLayout xmlns:mx="http://www.adobe.com/2006/mxml"
	xmlns:degrafa="http://www.degrafa.com/2007"
	xmlns:layouts="org.axiis.layouts.*"
	xmlns:scale="org.axiis.layouts.scale.*"
	xmlns:core="org.axiis.core.*">
	
		
	<mx:Number id="percentGap">0</mx:Number>
	
	<core:referenceRepeater>
		<layouts:GeometryRepeater id="myLayout" dataProvider="{dataItems}">
			<layouts:geometry>
				<degrafa:RegularRectangle id="referenceGeometry" x="0" y="0" width="{(width / itemCount) - (width * percentGap/2)}" height="{height}" enableEvents="false"/>
			</layouts:geometry>
			<layouts:modifiers>
				<layouts:PropertyModifier property="x" modifier="{width/itemCount}" modifierOperator="add"/>
			</layouts:modifiers>
		</layouts:GeometryRepeater>
	</core:referenceRepeater>
	
</core:BaseLayout>
