<?xml version="1.0" encoding="utf-8"?>
<DataCanvas xmlns="org.axiis.*" xmlns:mx="http://www.adobe.com/2006/mxml" xmlns:axiis="http://www.axiis.org/2009" xmlns:degrafa="http://www.degrafa.com/2007" xmlns:geometry="org.axiis.charts.geometry.*" xmlns:layouts="org.axiis.layouts.*">

	<mx:Script>
		<![CDATA[
			import org.axiis.layouts.scale.IScale;
			
			[Bindable]
			public var dataField:String;
			
			[Bindable]
			public var scale:IScale;
		]]>
	</mx:Script>
	
	<layouts>		
		<layouts:HBoxLayout id="layout" dataProvider="{dataProvider}" width="{width}" height="{height}">
			<layouts:drawingGeometries>
				<geometry:Column id="myCol" x="{layout.currentReference.x}" scale="{scale}" dataField="{dataField}">
					<geometry:fill>
						<degrafa:SolidFill color="0xff"/>
					</geometry:fill>
				</geometry:Column>
			</layouts:drawingGeometries>
		</layouts:HBoxLayout>
	</layouts>
	
</DataCanvas>
