<?xml version="1.0" encoding="utf-8"?>
<!---
	A bracket that can be used to denote a group and label items that are laid
	out horizontally.
-->
<degrafa:RegularRectangle xmlns="*" xmlns:mx="http://www.adobe.com/2006/mxml" xmlns:degrafa="http://www.degrafa.com/2007">
	
	<mx:Script>
		<![CDATA[
			import com.degrafa.paint.SolidStroke;
			import org.axiis.core.AxiisSprite;
			
			[Bindable]
			/**
			 * The text of the label placed beneath the bracket.
			 */
			public var labelValue:String="";
	
			[Bindable]
			/**
			 * The stroke used to draw lines of the bracket.
			 */
			public var markerStroke:SolidStroke=new SolidStroke(0xFFFFFF,.5,1);		
		]]>
	</mx:Script>
	
	<!--- The fontFamily of the label -->
	<mx:String id="fontFamily">Arial</mx:String>
	<!--- The font size of the label -->
	<mx:Number id="fontSize">12</mx:Number>
	<!--- The color of the label -->
	<mx:Number id="fontColor">0</mx:Number>
	<!--- The weight of the label -->
	<mx:String id="fontWeight">normal</mx:String>

	<degrafa:geometry>
		<!-- bottom line -->
		<degrafa:Line x="{this.x}" x1="{this.x+width}" y="{this.y+height-height*.2}" y1="{this.y+height-height*.2}" stroke="{markerStroke}"/>
		<!-- left line -->
		<degrafa:Line x="{this.x}" x1="{this.x}" y="{this.y+height-height*.2}" y1="{this.y}" stroke="{markerStroke}"/>
		<!-- right line -->
		<degrafa:Line x="{this.x+width}" x1="{this.x+width}" y="{this.y+height-height*.2}" y1="{this.y}" stroke="{markerStroke}"/>
		<!-- center line -->
		<degrafa:Line x="{this.x+width/2}" x1="{this.x+width/2}" y="{this.y+height-height*.2}" y1="{this.y+height}" stroke="{markerStroke}"/>
		<degrafa:RasterText text="{labelValue}" x="{this.x-5}"  y="{this.y+height}" width="{width+10}" height="20" align="center"
			fontSize="{fontSize}" textColor="{fontColor}" fontWeight="{fontWeight}" fontFamily="{fontFamily}"/>
	</degrafa:geometry>	

</degrafa:RegularRectangle>
